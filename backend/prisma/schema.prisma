datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int       @id @default(autoincrement())
  name           String
  email          String    @unique
  password       String
  profilePicture Bytes?
  projects       Project[]

  Task Task[]
}

model Project {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
  tasks       Task[] // Relaciona o projeto com v√°rias tarefas
}

model Task {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id])
}
