datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String    @id @default(uuid())
  name           String
  email          String    @unique
  password       String
  profilePicture Bytes?
  projects       Project[]
  tasks          Task[]
}

model Project {
  id          String @id @default(uuid())
  name        String
  description String
  userId      String
  user        User   @relation(fields: [userId], references: [id])
  tasks       Task[]
}

model Task {
  id          String  @id @default(uuid())
  name        String
  description String
  userId      String
  user        User    @relation(fields: [userId], references: [id])
  projectId   String
  project     Project @relation(fields: [projectId], references: [id])
}
