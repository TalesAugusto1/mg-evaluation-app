datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Project {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  tasks       Task[]
}

model Task {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  status      String
  dueDate     DateTime
  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id])
  assignedTo  String
}
